<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageButton
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/subway"
            android:src="@drawable/subwaylogo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="168dp"
            android:onClick="onClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Food &amp; Restaurants:"
        android:id="@+id/textView"
        android:layout_above="@+id/whitecastle"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/whitecastle"
        android:src="@drawable/whitecastlelogo"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:layout_alignTop="@+id/subway"
        android:layout_toRightOf="@+id/subway"
        android:layout_toEndOf="@+id/subway" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/mcdonalds"
        android:src="@drawable/mcdonalslogo"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:layout_alignTop="@+id/whitecastle"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>